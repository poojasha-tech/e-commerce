enum UserType {
   BUYER
   SELLER
 }


model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  userType UserType
}

model Catalog {
  id       Int      @id @default(autoincrement())
  username     String @unique
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  price      Int
  catalogId  Int
}

